%html.no-js{ :lang => "en" }
  <!--<![endif]-->

  %head
    %title Rhok Brisbane 2013

    %meta{ :charset => "utf-8" }
    %meta{ "http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }
    %meta{ :name => "viewport", :content => "initial-scale=1.0" }

    = stylesheet_link_tag "application", media: "all", data: { turbolinks_track: true }
    = javascript_include_tag "application", data: { turbolinks_track: true }
    = csrf_meta_tag
%body
  .authentication= render "layouts/authentication_links"
  %div.flash
    %p.notice= notice
    %p.alert= alert

  %nav{ role: :banner }
  %header
    = link_to 'Sign in with Facebook', user_omniauth_authorize_path(:facebook)
    = link_to 'Sign in with email', new_user_session_path

  %main{ role: 'main' }
    = yield

  %footer
