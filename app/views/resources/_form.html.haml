= form_for @resource do |f|
  .field
    = f.label :name
    = f.text_field :name

  .field
    = f.label :category
    = f.select :category, ResourcesCategory.to_a

  .half-width-fields
    .field.one-half
      = f.label :url
      = f.text_field :url

    .field.one-half
      = f.label :phone
      = f.text_field :phone

    .field.one-half
      = f.label :facebook
      .field-with-text.facebook
        %em facebook.com/
        = f.text_field :facebook

    .field.one-half
      = f.label :twitter
      .field-with-text.twitter
        %em twitter.com/
        = f.text_field :twitter

    = fields_for :address, @address do |a|
      .field
        = a.label :street1, 'Street'
        = a.text_field :street1

      .field
        = a.label :suburb
        = a.text_field :suburb

      .field
        = a.label :state
        = a.text_field :state

      .field
        = a.label :country
        = a.text_field :country

  .submit
    = f.submit 'Save'
