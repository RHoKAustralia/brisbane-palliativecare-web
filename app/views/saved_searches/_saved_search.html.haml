%tr
  %td
    = link_to saved_search.updated_at.to_s(:time_with_date), saved_search

  %td
    - saved_search.tags.limit(3).each do |tag|
      = link_to tag.name.truncate(6), tag, class: 'tag', title: tag.name

  %td
    .buttons<
      = link_to 'Edit', edit_saved_search_path(saved_search), class: 'button icon-pencil'
      = link_to 'Delete', saved_search, class: 'button icon-remove', :method => :delete, :data => { :confirm => 'Are you sure?' }
