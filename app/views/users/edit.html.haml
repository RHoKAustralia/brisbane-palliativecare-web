= content_for :title, 'Editing profile'

= form_for @user do |f|
  .field
    = f.label :name
    = f.text_field :name

  .field
    = f.label :email
    = f.email_field :email

  .field
    = f.label :public
    = f.check_box :public

  - if current_user && current_user.admin?
    .field
      = f.label :admin
      = f.check_box :admin

    = fields_for :address, @address do |a|
      .field
        = a.label :street1, 'Street'
        = a.text_field :street1

      .fields
        .field.one-third
          = a.label :suburb
          = a.text_field :suburb

        .field.one-third
          = a.label :state
          = a.text_field :state

        .field.one-third
          = a.label :country
          = a.text_field :country

  .submit
    = f.submit 'Save'
